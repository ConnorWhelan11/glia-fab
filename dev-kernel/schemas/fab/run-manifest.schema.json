{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fab.schema.run_manifest.v1",
  "title": "Fab Run Manifest",
  "description": "Immutable manifest for artifact provenance tracking",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "created_at",
    "files",
    "tool_versions"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version identifier"
    },
    "run_id": {
      "type": "string",
      "description": "Unique run identifier",
      "pattern": "^run_[0-9T]+Z_[a-f0-9]+$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Manifest creation timestamp"
    },
    "gate_config_id": {
      "type": "string",
      "description": "Gate configuration used"
    },
    "issue_id": {
      "type": "string",
      "description": "Associated Beads issue ID"
    },
    "files": {
      "type": "object",
      "description": "File inventory with hashes",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["sha256"],
        "properties": {
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA256 hash of file"
          },
          "size_bytes": {
            "type": "integer",
            "minimum": 0,
            "description": "File size in bytes"
          },
          "mime_type": {
            "type": "string",
            "description": "MIME type of file"
          }
        }
      }
    },
    "tool_versions": {
      "type": "object",
      "description": "Tool versions for reproducibility",
      "additionalProperties": false,
      "properties": {
        "blender": {
          "type": "string",
          "description": "Blender version",
          "examples": ["4.1.0"]
        },
        "python": {
          "type": "string",
          "description": "Python version"
        },
        "dev_kernel": {
          "type": "string",
          "description": "Dev kernel version"
        },
        "pytorch": {
          "type": "string",
          "description": "PyTorch version (if used)"
        },
        "open_clip": {
          "type": "string",
          "description": "OpenCLIP version (if used)"
        }
      }
    },
    "config": {
      "type": "object",
      "description": "Configuration snapshot",
      "properties": {
        "render_settings_hash": { "type": "string" },
        "critic_config_hash": { "type": "string" },
        "gate_thresholds_hash": { "type": "string" }
      }
    },
    "iteration": {
      "type": "object",
      "description": "Iteration chain information",
      "additionalProperties": false,
      "properties": {
        "parent_run_id": {
          "type": ["string", "null"],
          "description": "Parent run ID in repair chain"
        },
        "iteration_index": {
          "type": "integer",
          "minimum": 0,
          "description": "Iteration number (0 = first attempt)"
        },
        "max_iterations": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum allowed iterations"
        }
      }
    },
    "environment": {
      "type": "object",
      "description": "Environment information",
      "properties": {
        "os": { "type": "string" },
        "hostname": { "type": "string" },
        "cpu_count": { "type": "integer" },
        "gpu_available": { "type": "boolean" },
        "container_id": { "type": "string" }
      }
    }
  }
}


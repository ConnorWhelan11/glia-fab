{
  "packageManager": "bun@1.1.24",
  "scripts": {
    "prepare": "husky",
    "skills:generate": "python kernel/src/cyntra/skills/generate.py",
    "skills:clean": "python kernel/src/cyntra/skills/generate.py --clean",
    "dev:immersa": "cd apps/immersa && npm run watch",
    "build:immersa": "cd apps/immersa && npm run release",
    "build:ag-ui-ext": "cd packages/ag-ui-ext && bun run build",
    "dev:desktop": "bun run build:ag-ui-ext && cd apps/desktop && bun run tauri dev",
    "build:desktop": "bun run build:ag-ui-ext && cd apps/desktop && bun run tauri build",
    "build:all": "bun run build:immersa && bun run build:desktop",
    "lint": "bun run lint:ts && bun run lint:py",
    "lint:ts": "eslint apps/*/src packages/*/src --max-warnings=0",
    "lint:py": "cd kernel && ruff check src/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p apps/desktop && tsc --noEmit -p packages/ag-ui-ext"
  },
  "devDependencies": {
    "@storybook/react-vite": "10.1.10",
    "esbuild": "0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "10.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "lint-staged": {
    "apps/desktop/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "packages/ag-ui-ext/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ],
    "*.py": [
      "ruff check --fix",
      "ruff format"
    ]
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "24.11.0"
  },
  "resolutions": {
    "framer-motion": "12.4.13",
    "motion-dom": "12.4.11",
    "motion-utils": "12.4.10",
    "esbuild": "0.27.2"
  },
  "dependencies": {}
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dev-kernel/schemas/proof.schema.json",
  "title": "PatchProof",
  "description": "Standardized output from a workcell execution",
  "type": "object",
  "required": [
    "schema_version",
    "workcell_id",
    "issue_id",
    "status",
    "patch",
    "verification",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "workcell_id": {
      "type": "string",
      "pattern": "^wc-\\d+-\\d{8}T\\d{6}Z$"
    },
    "issue_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed", "timeout", "error"]
    },
    "patch": {
      "type": "object",
      "required": ["branch", "base_commit", "head_commit", "diff_stats"],
      "properties": {
        "branch": {
          "type": "string",
          "description": "Branch name containing the changes"
        },
        "base_commit": {
          "type": "string",
          "pattern": "^[a-f0-9]{40}$"
        },
        "head_commit": {
          "type": "string",
          "pattern": "^[a-f0-9]{40}$"
        },
        "diff_stats": {
          "type": "object",
          "properties": {
            "files_changed": { "type": "integer" },
            "insertions": { "type": "integer" },
            "deletions": { "type": "integer" }
          }
        },
        "files_modified": {
          "type": "array",
          "items": { "type": "string" }
        },
        "forbidden_path_violations": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "commands_executed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["command", "exit_code", "duration_ms"],
        "properties": {
          "command": { "type": "string" },
          "exit_code": { "type": "integer" },
          "duration_ms": { "type": "integer" },
          "stdout_path": { "type": "string" },
          "stderr_path": { "type": "string" }
        }
      }
    },
    "verification": {
      "type": "object",
      "required": ["gates"],
      "properties": {
        "gates": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["passed", "exit_code"],
            "properties": {
              "passed": { "type": "boolean" },
              "exit_code": { "type": "integer" },
              "duration_ms": { "type": "integer" },
              "output_path": { "type": "string" },
              "failure_summary": { "type": "string" }
            }
          }
        },
        "all_passed": { "type": "boolean" },
        "blocking_failures": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "logs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "test_report": { "type": "string" },
        "coverage_report": { "type": "string" },
        "agent_transcript": { "type": "string" }
      }
    },
    "review": {
      "type": "object",
      "description": "Populated if this workcell performed review",
      "properties": {
        "verdict": {
          "type": "string",
          "enum": ["approve", "request_changes", "abstain"]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "comments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "severity": {
                "type": "string",
                "enum": ["critical", "major", "minor", "nit"]
              },
              "message": { "type": "string" }
            }
          }
        },
        "blocking_issues": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Agent's self-assessed confidence in solution"
    },
    "risk_classification": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "risk_factors": {
      "type": "array",
      "items": { "type": "string" }
    },
    "beads_mutations": {
      "type": "array",
      "description": "Recommended changes to Beads state",
      "items": {
        "type": "object",
        "required": ["action"],
        "properties": {
          "action": {
            "type": "string",
            "enum": ["create", "update", "close", "dep_add", "dep_remove"]
          },
          "issue_id": { "type": "string" },
          "new_issue": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" },
              "priority": { "type": "string" },
              "blocking": { "type": "array", "items": { "type": "string" } }
            }
          },
          "updates": { "type": "object" },
          "dep": {
            "type": "object",
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" },
              "type": { "type": "string" }
            }
          }
        }
      }
    },
    "follow_ups": {
      "type": "array",
      "description": "Discovered work not in original scope",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "priority": { "type": "string" },
          "discovered_from": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["toolchain", "started_at", "completed_at"],
      "properties": {
        "toolchain": { "type": "string" },
        "toolchain_version": { "type": "string" },
        "model": { "type": "string" },
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "duration_ms": { "type": "integer" },
        "tokens_used": { "type": "integer" },
        "cost_usd": { "type": "number" }
      }
    }
  }
}
